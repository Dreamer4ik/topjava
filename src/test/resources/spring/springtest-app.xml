<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="ru.javawebinar.topjava.repository.inmemory.InMemoryUserRepository" id = "inMemoryUserRepository" />

    <bean class="ru.javawebinar.topjava.repository.jdbc.JdbcUserRepository" id="userRepository"/>

    <bean class="ru.javawebinar.topjava.service.UserService" id="userService">
        <constructor-arg name="repository" ref="userRepository"/>
    </bean>

    <bean class="ru.javawebinar.topjava.web.user.AdminRestController" id="adminRestController">
        <constructor-arg name="service" ref="userService"/>
    </bean>




</beans>